---
interface Props {
  title: string;
}

const { title } = Astro.props;
import '../styles/style.css';
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Профессиональное медицинское оборудование высокого качества. Продажа и обслуживание медтехники от ведущих производителей." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body itemscope itemtype="https://schema.org/Organization">
    <meta itemprop="name" content="MedEquip" />
    <meta itemprop="description" content="Поставщик профессионального медицинского оборудования" />
    <meta itemprop="image" content="/favicon-96x96.png" />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: #0066cc;
    --accent-light: #4d94ff;
    --accent-dark: #004d99;
    --background: #ffffff;
    --text: #333333;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: var(--background);
    color: var(--text);
  }
  
  body {
    margin: 0;
    padding: 0;
  }
</style> 
---
const equipment = [
  {
    title: 'МРТ Сканеры',
    description: 'Высокоточные магнитно-резонансные томографы',
    image: '/siemens-healthineers_MRI_Magnetom-Sola_scanner-side.webp'
  },
  {
    title: 'УЗИ Аппараты',
    description: 'Современные ультразвуковые системы',
    image: 'img_4270.jpg'
  },
  {
    title: 'Рентген Оборудование',
    description: 'Цифровые рентгеновские комплексы',
    image: 'rentgen.jpg'
  }
];
---

<section class="equipment" id="equipment" itemscope itemtype="https://schema.org/ItemList">
  <h2 itemprop="name">Наше Оборудование</h2>
  <div class="equipment-grid">
    {equipment.map((item, index) => (
      <div class="equipment-card" itemprop="itemListElement" itemscope 
           itemtype="https://schema.org/Product">
        <meta itemprop="position" content={`${index + 1}`} />
        <img src={item.image} alt={item.title} itemprop="image" />
        <h3 itemprop="name">{item.title}</h3>
        <p itemprop="description">{item.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .equipment {
    padding: 4rem 2rem;
    background: #f5f5f5;
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;

    @media(max-width: 992px) {
      font-size: 2rem;
    }
    @media(max-width: 767px) {
      font-size: 1.75rem;
    }


  }

  .equipment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;

    @media(max-width: 500px) {
      grid-template-columns: auto;
    }
  }



  .equipment-card {
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .equipment-card:hover {
    transform: translateY(-5px);
  }

  .equipment-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .equipment-card h3 {
    padding: 1rem;
    margin: 0;
  }

  .equipment-card p {
    padding: 0 1rem 1rem;
    color: #666;
  }
</style> 
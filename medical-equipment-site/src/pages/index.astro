---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Advantages from '../components/Advantages.astro';
import About from '../components/About.astro';
import Equipment from '../components/Equipment.astro';
import Reviews from '../components/Reviews.astro';
import SeoBlock from '../components/SeoBlock.astro';
import Trusted from '../components/Trusted.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="WrechMed | Медицинское Оборудование | Высокое Качество и Надежность">
  <main>
    <Header />
    
    <div itemscope itemtype="https://schema.org/Product">
      <meta itemprop="category" content="Медицинское оборудование" />
      
      <Hero />
      
      <div itemprop="offers" itemscope itemtype="https://schema.org/AggregateOffer">
        <meta itemprop="priceCurrency" content="RUB" />
        <meta itemprop="availability" content="https://schema.org/InStock" />
      </div>
      
      <Advantages />
      
      <div itemprop="description">
        <About />
      </div>
      
      <Equipment />
    </div>
    
    <div itemscope itemtype="https://schema.org/Review">
      <Reviews />
    </div>
    
    <SeoBlock />
    
    <div itemscope itemtype="https://schema.org/Organization">
      <Trusted />
    </div>
    
    <div itemscope itemtype="https://schema.org/FAQPage">
      <FAQ />
    </div>
    
    <div itemscope itemtype="https://schema.org/ContactPoint">
      <Contact />
    </div>
    
    <Footer />
  </main>
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "WrechMed",
  "url": "https://resend-mail.ru",
  "logo": "/favicon-96x96.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+7-951-800-8027",
    "contactType": "sales",
    "availableLanguage": "Russian"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "RU",
    "addressLocality": "Красногорск"
  }
}
</script> 